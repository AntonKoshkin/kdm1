.footer
	background-color #eef3f6
	padding 30px 0 20px
	
	@media (min-width md-min)
		background-color #e1e8ed
		padding 70px 0

.foot
	@media (min-width md-min)
		&__title
			font-size 20px
			font-weight bold
			color black
			margin-top 0
			margin-bottom 20px

		&__a
			display inline-block
			font-size 14px
			color black
			text-decoration underline
			padding 7px 0
			
		&__item:last-child &__a
			margin-top 10px
			color blue-link

