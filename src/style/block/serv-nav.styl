.serv-nav
	&__item
		serv-nav-btn()
		
		position relative
		
		&:last-child
			.serv-nav__sublist
				display none
	
	&__sublist
		display none

	&__item:hover > &__sublist
		display inline-block
		text-align left
		list-style-type none
		z-index 1
		position absolute
		top 100%
		left 0
		background-color white
		columns 3
		padding 50px 20px
		column-rule 1px solid rgba(gray-very-light, .4)
		box-shadow 0 1px 5px rgba(black, .1)
		max-height 280px
	
	&__subitem
		line-height 1.5
		padding 20px 20px 0
		vertical-align top
		
		&:nth-child(8)
			padding-bottom 20px
		
		&:nth-child(1)
		&:nth-child(5)
		&:nth-child(9)
			padding-top 0

	&__suba
		mix-serv-nav-suba()
		
		display block
	
	@media (min-width md-min)
		.header--fixed &
			display inline-block
			vertical-align top
			padding-top 13.5px
			padding-left 5px
	
	@media (min-width lg-min)
		.header--fixed &
			padding-left 50px