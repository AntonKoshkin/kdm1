.head-contacts
	&__phone:last-child
	&__backcall
		display none
	
	&__phones
		display inline-block
		
	&__phone
		mix-cont-phone()
		
		display inline-block
		padding 11.5px 15px
	
	@media (max-width sm-max)
		&__request
			float right
			position relative
			display inline-block
			width 45px
			height 45px
			border-radius 4px
			text-align center
			padding 15px 0
			background-color white
			box-shadow inset 0 1px 1px rgba(black, .09),
				0 1px 1px rgba(#2e2200, .35)
			cursor pointer
			vertical-align top
			
			&:before
				sprite($png_mail)
				
				content ''
				display inline-block
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				margin auto
	
	@media (min-width md-min)
		text-align center
		margin-bottom 23px
		
		@extend $clearfix
		
		&__phone:last-child
		&__backcall
			display inline-block
		
		&__phones
			display inline-block
			width 27%
			float left
			
		&__phone
			padding 0
			
			&:first-child
				margin-bottom 14px
		
		&__backcall
			mix-cont-bc()
			
			vertical-align top
			padding 5px
			background none
			border none
			margin 17px 0
		
		&__request
			mix-cont-req()
			
			background linear-gradient(to bottom, #61b020 0%, #67c01e 100%)
			padding 7px 24px
			box-shadow 0 1px 0 #5ba320
			border-radius 4px
			margin 15px 0
			vertical-align top
			float right
			cursor pointer
			
		.header--fixed &
			margin-bottom 0
	
	@media (min-width lg-min)
		&__phones
			width 23%
			
		&__request
			padding 7px 68px