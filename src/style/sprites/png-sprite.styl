/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;

At the bottom of this section, we provide information about the spritesheet itself
$spritesheet = width height image $spritesheet_sprites;
*/
$png_mail_name = 'png_mail';
$png_mail_x = 0px;
$png_mail_y = 0px;
$png_mail_offset_x = 0px;
$png_mail_offset_y = 0px;
$png_mail_width = 32px;
$png_mail_height = 32px;
$png_mail_total_width = 49px;
$png_mail_total_height = 32px;
$png_mail_image = '../img/png-sprite.png';
$png_mail = 0px 0px 0px 0px 32px 32px 49px 32px '../img/png-sprite.png' 'png_mail';
$png_search_name = 'png_search';
$png_search_x = 33px;
$png_search_y = 0px;
$png_search_offset_x = -33px;
$png_search_offset_y = 0px;
$png_search_width = 16px;
$png_search_height = 16px;
$png_search_total_width = 49px;
$png_search_total_height = 32px;
$png_search_image = '../img/png-sprite.png';
$png_search = 33px 0px -33px 0px 16px 16px 49px 32px '../img/png-sprite.png' 'png_search';
$spritesheet_width = 49px;
$spritesheet_height = 32px;
$spritesheet_image = '../img/png-sprite.png';
$spritesheet_sprites = $png_mail $png_search;
$spritesheet = 49px 32px '../img/png-sprite.png' $spritesheet_sprites;

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}

/*
The `sprites` mixin generates identical output to the CSS template
  but can be overridden inside of Stylus

This must be run when you have at least 2 sprites.
  If run with a single sprite, then there will be reference errors.

sprites($spritesheet_sprites);
*/
sprites($sprites) {
  for $sprite in $sprites {
    $sprite_name = $sprite[9];
    .{$sprite_name} {
      sprite($sprite);
    }
  }
}
